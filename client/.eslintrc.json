{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "camelcase": 2,
    "curly": 2,
    "dot-notation": 0,
    "guard-for-in": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
    "new-cap": [2, { "properties": false }],
    "no-caller": 2,
    "no-console": 0,
    "no-empty": 2,
    "no-eval": 2,
    "no-implied-eval": 2,
    "no-multi-str": 0,
    "no-new": 2,
    "no-plusplus": 0,
    "no-undef": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-expressions": [2, { "allowShortCircuit": true, "allowTernary": true }],
    "no-unused-vars": 2,
    "max-depth": [2, 3],
    "max-len": [2, 120],
    "max-params": [2, 5],
    "max-statements": [2, 25],
    "quotes": [2, "single"],
    "semi": 2,
    "strict": 0,
    "wrap-iife": [2, "any"]
  },
  "root": true
}